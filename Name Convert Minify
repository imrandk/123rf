function createConverter(){const e=window.open("","_blank","width=800,height=600,top=100,left=100");if(!e)return;e.focus();const t=e.document.createElement("div");t.style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); display: flex; align-items: flex-start; background: #f9f9f9; padding: 20px; border: 1px solid #ccc; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);";const n=e.document.createElement("div");n.style="display: flex; flex-direction: column; align-items: center;";const r=createTextArea(e.document,"Enter new file names here (one per line)...","#007bff","150px"),o=createTextAreaWithCopy(e.document,"Enter old titles here (one per line)...","#28a745","150px"),a=e.document.createElement("div");a.style="margin: 10px; font-size: 14px; color: #333; text-align: center;",a.textContent="Results will appear here after conversion.";const i=createButton(e.document,"Convert","#007bff",(()=>{const e=r.value.trim().split("\n").filter((e=>""!==e.trim())),t=o.querySelector("textarea").value.split("\n"),n=new Map;e.forEach((e=>{const t=e.split("\t");if(t.length>=2){const e=t[1].trim(),r=t[0].trim();n.set(e,r)}}));let i=0;o.querySelector("textarea").value=t.map((e=>{if(e.trim().startsWith("File Name: ")){const t=e.replace("File Name: ","").trim().split(".")[0];if(n.has(t)){const e=n.get(t);return i++,`File Name: ${e}`}}return e})).join("\n"),a.textContent=`New File Names Found: ${e.length}, File Names Replaced: ${i}`}));n.append(r,o,i,a);const c=e.document.createElement("div");c.style="display: flex; flex-direction: column; align-items: center;";const l=createTextAreaWithCopy(e.document,"Cleaned titles will appear here...","#dc3545","320px"),p=e.document.createElement("div");p.style="margin: 10px; font-size: 14px; color: #333; text-align: center;",p.textContent="Cleaned titles count will appear here.";const s=createButton(e.document,"Clean Titles","#dc3545",(()=>{const e=l.querySelector("textarea").value.split("\n").filter((e=>e.trim().startsWith("File Name: "))).map((e=>e.replace("File Name: ","")));l.querySelector("textarea").value=e.join("\n\n"),p.textContent=`Titles Cleaned: ${e.length}`}));c.append(l,s,p),t.append(n,c),e.document.body.append(t),e.document.body.style="background: #f0f0f0; margin: 0; display: flex; justify-content: center; align-items: center; height: 100vh;"}function createTextArea(e,t,n,r){const o=e.createElement("textarea");return o.style=`width: 300px; height: ${r}; margin: 10px; padding: 10px; border: 2px solid ${n}; border-radius: 5px; font-size: 16px;`,o.placeholder=t,o}function createTextAreaWithCopy(e,t,n,r){const o=e.createElement("div");o.style="position: relative; width: 300px; margin: 10px;";const a=createTextArea(e,t,n,r),i=e.createElement("button");return i.textContent="Copy",i.style=`position: absolute; top: 10px; right: 10px; padding: 5px 10px; border: none; border-radius: 5px; background: ${n}; color: #fff; font-size: 12px; cursor: pointer;`,i.onclick=()=>copyText(a,e),o.append(a,i),o}function createButton(e,t,n,r){const o=e.createElement("button");return o.textContent=t,o.style=`margin: 10px; padding: 10px 20px; border: none; border-radius: 5px; background: ${n}; color: #fff; font-size: 16px; cursor: pointer;`,o.onclick=r,o}function copyText(e,t){e.focus(),e.select(),t.hasFocus()?navigator.clipboard.writeText(e.value).catch((()=>{t.execCommand("copy")})):t.execCommand("copy")}createConverter();
