(()=>{const e=document.querySelectorAll('div[style*="display: grid; font-size: 13px;"]'),t=Array.from(e).map(((e,t)=>({fileName:(e.querySelector("img")?.getAttribute("src")||"").split("/").pop().split("?")[0].split(".").slice(0,-1).join(".")||`No file name found for file ${t+1}`,description:e.querySelector("textarea")?.value.trim()||`No description found for file ${t+1}`,keywords:Array.from(e.querySelectorAll(".react-tags__selected-tag-name")).map((e=>e.textContent))}))),o=document.createElement("div");Object.assign(o.style,{position:"fixed",top:"50px",left:"50px",width:"300px",height:"150px",background:"#f0f0f0",border:"2px solid #333",padding:"10px",boxShadow:"4px 4px 15px rgba(0, 0, 0, 0.3)",zIndex:"9999",cursor:"move",display:"flex",flexDirection:"column",borderRadius:"8px",overflow:"auto"});const n=document.createElement("span");n.innerHTML="&times;",Object.assign(n.style,{position:"absolute",top:"5px",right:"5px",cursor:"pointer",fontSize:"20px",fontWeight:"bold",color:"white",background:"red",width:"24px",height:"24px",display:"flex",justifyContent:"center",alignItems:"center",borderRadius:"50%"}),n.onclick=()=>document.body.removeChild(o);const i=document.createElement("textarea");i.value=t.map((e=>`File Name: ${e.fileName}\nTitle: ${e.description}\nTags: ${e.keywords.join(", ")}\n\n`)).join(""),Object.assign(i.style,{width:"100%",height:"80px",border:"none",outline:"none",resize:"none",padding:"5px",borderRadius:"4px",background:"#fff",fontSize:"14px",marginBottom:"10px"}),o.append(n,i);let r,d,s=!1;o.addEventListener("mousedown",(e=>{e.target!==i&&e.target!==n&&(s=!0,r=e.clientX-o.offsetLeft,d=e.clientY-o.offsetTop)})),document.addEventListener("mousemove",(e=>{s&&(o.style.left=e.clientX-r+"px",o.style.top=e.clientY-d+"px")})),document.addEventListener("mouseup",(()=>s=!1));const l=document.createElement("div");Object.assign(l.style,{width:"15px",height:"15px",background:"#333",position:"absolute",bottom:"0",right:"0",cursor:"se-resize",borderRadius:"4px"}),o.appendChild(l);let p,a,c,m,u=!1;l.addEventListener("mousedown",(e=>{u=!0,p=e.clientX,a=e.clientY,c=o.offsetWidth,m=o.offsetHeight,document.addEventListener("mousemove",x),document.addEventListener("mouseup",f),e.preventDefault()}));const x=e=>{if(u){const t=Math.max(c+(e.clientX-p),200),n=Math.max(m+(e.clientY-a),150);o.style.width=t+"px",o.style.height=n+"px",i.style.height=n-100+"px"}},f=()=>{u=!1,document.removeEventListener("mousemove",x),document.removeEventListener("mouseup",f)},g=document.createElement("button");g.textContent="Copy",Object.assign(g.style,{backgroundColor:"transparent",color:"blue",border:"1px solid blue",padding:"10px",borderRadius:"20px",cursor:"pointer",fontSize:"16px",marginTop:"10px",width:"100%",textAlign:"center"}),g.onclick=()=>{i.select(),document.execCommand("copy"),document.body.removeChild(o)},o.appendChild(g),document.body.appendChild(o)})();
